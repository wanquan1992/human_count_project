import ConfigParser

globalConfig = {}


def load_cameras():
    globalConfig['cameras'] = [];
    camera001 = {'uid': 'camera001', 'base_path': 'camera/001/', 'config_path': 'camera/001/config',
                 'frame_path': 'camera/001/frames/', 'result_softdensity_path': 'camera/001/result_softdensity/',
                 'result_personarea_path': 'camera/001/',
                 'result_person_path': 'camera/001/','result_person_box_path':'camera/001/'};
    globalConfig['cameras'].append(camera001);


def load_camera_config():
    for camera in globalConfig['cameras']:
        configPath = camera['config_path'];
        config = ConfigParser.ConfigParser()
        config.read(configPath)
        camera['config'] = {};
        for section in config.sections():
            camera['config'][section] = {};
            for option in config.options(section):
                camera['config'][section][option] = config.get(section, option);


load_cameras();
load_camera_config();
